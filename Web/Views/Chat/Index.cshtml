@model Web.ViewModels.Chat.ChatViewModel

@{
    ViewBag.Title = "Chat Page";
}

<h2>Chat Page</h2>
<h3>Currently, we haven't supported HTML chat yet. This feature will be included soon.</h3>
<div class="container">
    <input type="text" id="message" data-bind ="value: chatMessage, valueUpdate: 'afterkeydown', event: {keydown: chatMessageKeyDown}" />
    <input type="button" id="bntSendMessage" value="Send" data-bind="click: sendMessage"/>
    <input type="hidden" id="displayname" />
    <div id="discussionpanel" style ="overflow:auto; height: 350px; width: 800px">
        <ul id="discussion">
        </ul>
    </div>
    @*<ul id="discussion">
        </ul>*@
    
</div>

@section scripts {
    <!--Script references. -->
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    @Html.KOViewModelInitialize()

    <script type="text/javascript">
        require(['@Url.Content("~/Scripts/Modules/Chat/Chat.js")'], function () {
            var options = {

            }
            ChatViewModelFuntion(options);
        });

    </script>
}